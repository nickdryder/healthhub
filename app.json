{
  "name": "HealthHub",
  "slug": "healthhub",
  "version": "1.0.0",
  "orientation": "portrait",
  "icon": "./assets/images/icon.png",
  "scheme": "healthhub",
  "userInterfaceStyle": "automatic",
  "newArchEnabled": true,
  "ios": {
    "bundleIdentifier": "com.yourname.healthhub",
    "buildNumber": "1",
    "supportsTablet": true,
    "infoPlist": {
      "NSHealthShareUsageDescription": "This app reads your health data to provide personalized insights and track your wellness.",
      "NSHealthUpdateUsageDescription": "This app saves workout and health data to Apple Health."
    }
  },
  "android": {
    "adaptiveIcon": {
      "foregroundImage": "./assets/images/adaptive-icon.png",
      "backgroundColor": "#ffffff"
    },
    "edgeToEdgeEnabled": true
  },
  "web": {
    "bundler": "metro",
    "output": "single",
    "favicon": "./assets/images/favicon.png"
  },
  "plugins": [
    "expo-router",
    [
      "expo-splash-screen",
      {
        "image": "./assets/images/splash-icon.png",
        "imageWidth": 200,
        "resizeMode": "contain",
        "backgroundColor": "#ffffff"
      }
    ],
    [
      "@kingstinct/react-native-healthkit",
      {
        "NSHealthShareUsageDescription": "This app reads your health data to provide personalized insights.",
        "NSHealthUpdateUsageDescription": "This app can save workout data to Apple Health.",
        "background": false
      }
    ]
  ],
  "experiments": {
    "typedRoutes": true
  }
}